curl_cmd (){
    METHOD=$1
    HEADER=$2
    BODY=$3
    HOST=$4
    URI=$5
    PROTOCAL=$6

    if [ $PROTOCAL = 'https' ];then
        INSEC='-k'
    else
        INSEC=""
    fi
    
    ck_header

    ck_body

    EXEC_CMD=$(echo curl "${INSEC} -X $METHOD  ${PROTOCAL}://${HOST}${URI} $EXEC_HEADER $EXEC_BODY")
    eval $EXEC_CMD
}